<Window x:Class="Intercom.KeyInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Intercom"
        mc:Ignorable="d"
        Title="Эмулятор ключа" Height="235" Width="323"
        FontFamily="Jetbrains Mono"
        WindowStartupLocation="CenterScreen"
        FontSize="24"
        ResizeMode="NoResize"
        >
    <StackPanel Margin="20">
        <TextBlock Text="Введите номер ключа" Margin="3"/>
        <TextBox Margin="3" x:Name="KeyTxt"/>
        <StackPanel Orientation="Horizontal" Margin="3">
            <Button x:Name="Ok" Content="OK" Padding="10,0,10,0" Margin="0,0,3,0" Click="Ok_Click"/>
            <Button x:Name="Cancel"  Content="Отмена" Padding="10,0,10,0" Margin="3,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
        <Button x:Name="ShowKeys"  Content="Ключи" Padding="10,0,10,0" Margin="3"/>
    </StackPanel>
</Window>
